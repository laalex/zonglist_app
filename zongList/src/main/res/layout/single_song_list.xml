<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_margin="5dp"
    android:hapticFeedbackEnabled="true"
    android:background="@drawable/list_background"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:id="@+id/song_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#696969"
            android:textSize="13dp"
            android:shadowColor="#ccc"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="downloaded"
                android:textColor="#fff"
                android:background="#797979"
                android:padding="8dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:id="@+id/song_status"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/song_status"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#0099cc"
                android:textColor="#fff"
                android:textSize="10dp"
                android:text="Download song"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="downloadSong"
                android:id="@+id/song_download_action"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#FF4444"
                android:textColor="#fff"
                android:textSize="10dp"
                android:text="View on YouTube"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/youtube_view"
                />
            </RelativeLayout>
        </LinearLayout>




</RelativeLayout>