<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Input fields for login -->
    <style name="loginField" parent="android:Theme">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#fff</item>
    </style>

    <!-- Login button -->
    <style name="loginButton" parent="android:Theme">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#ff7f01</item>
        <item name="android:textColor">#fff</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="error_box" parent="android:Theme">
        <item name="android:padding">10dp</item>
        <item name="android:background">#ff7800</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>
